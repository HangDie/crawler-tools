<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.hd.crawler.dao.RuleMapper" >
    <sql id="Base_Column_List" >
      rule_id, rule_name, rule_create_time, use_times
    </sql>
    <select id="queryAll" resultType="cn.hd.crawler.entity.Rule">
        SELECT <include refid="Base_Column_List" /> FROM tb_rule;
    </select>
    <select id="queryRuleById" parameterType="Integer" resultType="cn.hd.crawler.entity.Rule">
        SELECT <include refid="Base_Column_List" /> FROM tb_rule WHERE rule_id = #{ruleId};
    </select>
</mapper>